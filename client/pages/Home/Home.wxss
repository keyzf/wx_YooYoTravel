}
.seasonContainer{
    /*background: red;*/
    margin: 0;
    padding: 0;
    width: 100%;
}
.seasonHeader{
    display: flex;
    flex-direction: row;
    justify-content: center;
    align-items: center;
    height: 80rpx;
    font-size: 33rpx;
    color: limegreen;
    /*background: red;*/


}
.seasonHeader image{
    width: 50rpx;
    height: 50rpx;
}
.seasonHeader text{
    margin: 15rpx;
}
.seasonItem{
    width: 100%;
    position: relative;
    
    

}

.seasonImage{
    width: 100%;
    padding: 20rpx 20rpx 0rpx 20rpx;
    box-sizing: border-box;
}

.seasonTitle{
    position: absolute;
    left: 50%;
    top: 50%;
    transform:translate(-50%,-50%);
    display: flex;
    flex-direction: column;
    justify-content: center;
    align-items: center;
    text-align: center;
    

}

