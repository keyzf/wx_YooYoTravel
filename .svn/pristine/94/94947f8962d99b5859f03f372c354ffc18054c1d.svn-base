/* pages/Profile/Profile.wxss */
page {
    height:100%;
}

.greybg {
    background-color: #f4f4f4;
    height: 100%
}

.flex-wrp{
  display:flex;
  margin-top: 60rpx;
}
.flex-item{
  width: 200rpx;
  height: 300rpx;
  font-size: 26rpx;
}

.m-uc-top {
    height: 250rpx;
    background-size: 100%;
    background-color: #fff;
    padding-left: 60rpx;
    padding-right: 60rpx;
}

.m-profile {
    display: flex;
    height: 100%;
    justify-content: left;
    align-items: center;
}

.m-profile .avatar {
    width: 120rpx;
    height: 120rpx;
    border-radius: 50%;
    margin-right: 15rpx;
}

.m-profile .nickname {
    font-size: 37rpx;
}

.m-profile .partner {
    font-size: 30rpx;
}

.m-uc-warp {
  background-color: #fff;
  margin-top:20rpx;
  padding-left: 40rpx;
  padding-right: 40rpx;
}

.m-uc-warp .item {
  padding-top: 20rpx;
  padding-bottom: 20rpx;
  border-bottom: 1px solid #d9d9d9;
  font-size: 30rpx;
}

.m-uc-warp .lastitem {
  padding-top: 20rpx;
  padding-bottom: 20rpx;
  font-size: 30rpx;
}

.btn-logout {
    height: 80rpx;
    line-height: 80rpx;
    text-align: center;
    margin-top: 37rpx;
    border-radius: 3px;
    background-color: #ff8400; 
    color: #fff;
    font-size: 30rpx;
    margin-left: 40rpx;
    margin-right: 40rpx;

}

.btn-logout::after {
  border: 0px;
}

.m-uc-menu .list {
    display: flex;
    justify-content: center;
    align-items: center;
    padding-bottom: 24rpx;
    background-color: #fff; 
    margin-top:20rpx;
}

.m-uc-menu .list .item {
    flex: 1;
    text-align: center;
    margin-top: 30rpx;
    position: relative;
}

.m-uc-menu .list .item .txt {
    display: block;
    color: #666;
    font-size: 24rpx;
    margin-top: 9rpx;
}

.m-uc-menu .menu-icon {
    width: 45rpx;
    height: 45rpx;
}

.m-uc-menu .menu-icon-txt {
    font-size: 60rpx;
    color: #f48f18;
}