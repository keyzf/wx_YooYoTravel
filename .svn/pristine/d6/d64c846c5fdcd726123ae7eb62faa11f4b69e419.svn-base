/* pages/Profile/Profile.wxss */
page {
    height:100%;
}

.greybg {
    background-color: #f4f4f4;
    height: 100%
}

.flex-wrp{
  display:flex;
  margin-top: 60rpx;
}
.flex-item{
  width: 200rpx;
  height: 300rpx;
  font-size: 26rpx;
}

.m-uc-top {
    height: 250rpx;
    background-size: 100%;
    background-color: #fff;
}

.m-profile {
    display: flex;
    height: 100%;
    justify-content: left;
    align-items: center;
}

.m-profile .avatar {
    width: 150rpx;
    height: 150rpx;
    border-radius: 50%;
    margin-right: 15rpx;
}

.m-profile .nickname {
    font-size: 37rpx;
}

.m-uc-warp {
  background-color: #fff;
  margin-top:20rpx;
  padding-left: 40rpx;
  padding-right: 40rpx;
}

.m-uc-warp .item {
  padding-top: 20rpx;
  padding-bottom: 20rpx;
  border-bottom: 1px solid #d9d9d9;
}

.m-uc-warp .lastitem {
  padding-top: 20rpx;
  padding-bottom: 20rpx;
}