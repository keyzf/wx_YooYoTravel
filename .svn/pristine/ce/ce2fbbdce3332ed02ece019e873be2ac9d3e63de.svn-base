.inputBox {
    height: 100rpx;
    line-height: 100rpx;
    display: flex;
    position: relative;
}

.inputBox .j-inputtext {
    width: 100%;
    height:100rpx;
    border: 0;
    border-bottom: 1px solid #d9d9d9;
    font-size: 29rpx;
}

.login-form .scode .j-inputtext {
    flex: 4;
}

.login-form .scode .getbox {
    flex: 1.5;
    display: flex;
    justify-content: center;
    align-items: flex-end;
}

.login-form .scode .getcode {
    flex: 1;
    background: #ff8400;
    height: 80rpx;
    line-height: 80rpx;
    color: #fff;
    border-radius: 3px;
    text-align: center;
    font-size: 24rpx;
    margin-left: 4px;
}

 .login-form .scode .getimage {
    display: flex;
    align-items: center;
} 

.verification-text {
    font-size: 24rpx;
    color: #000;
} 

.verification-image {
  width: 140rpx;
  height: 50rpx;
}

.btn-login {
    height: 80rpx;
    line-height: 80rpx;
    text-align: center;
    margin-top: 37rpx;
    border-radius: 3px;
    background-color: #ff8400; 
    color: #fff;
    font-size: 30rpx;
}

.btn-login::after {
  border: 0px;
}